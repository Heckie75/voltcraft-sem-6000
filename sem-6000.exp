  lappend bytes 0

  # Byte 3: action
  for { set i 0 } { $i < 9 } { incr i } {

    lappend bytes 0

  }

  set response [ command_req $bytes ]

  if { [ llength $response ] == 3 \
      && [ lindex $response 0 ] == 8 \
      && [ lindex $response 1 ] == 0 \
