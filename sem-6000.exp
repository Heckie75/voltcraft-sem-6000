# prints help output
proc help { argv } {

  global HELP

  # print help for given command
  if { [llength $argv] == 2 && [lindex $argv 0] == "--help" } {

    set command [lindex $argv 1]
    puts stderr $HELP(usage)

    if { [ info exists HELP($command) ] == 1 } {
      puts stderr "\n$HELP($command)\n"
    } else {
      puts stderr "\nUnknown command <$command>.\n"
    }

    exit 1

  } elseif { [llength $argv ] < 1 || [ lindex $argv 0 ] == "--help" } {

    puts stderr "$HELP(usage)"
    puts stderr "\nBasic commands:\n"
    puts stderr "$HELP(on)"
    puts stderr "$HELP(off)"
    puts stderr "$HELP(toggle)"
    puts stderr "$HELP(standby)\n"
    puts stderr "\nScheduler commands:\n"
    puts stderr "$HELP(scheduler)"
    puts stderr "\nCountdown commands:\n"
    puts stderr "$HELP(countdown)"
    puts stderr "\nMeasurement commands:\n"
    puts stderr "$HELP(status)"
    puts stderr "$HELP(measure)\n"
    puts stderr "$HELP(data)"
    puts stderr "\nDevice commands:\n"
    puts stderr "$HELP(device)"
    puts stderr "$HELP(sync)"
    puts stderr "$HELP(name)"
    puts stderr "$HELP(pin)"
    puts stderr "\nDevice settings:\n"
    puts stderr "$HELP(settings)"
    puts stderr "$HELP(led)"
    puts stderr "$HELP(overload)\n"
    puts stderr "$HELP(price)"
    puts stderr "$HELP(reset)"
    puts stderr "\nStatistics:\n"
    puts stderr "$HELP(statistics)"
    puts stderr "\nOther commands:\n"
    puts stderr "$HELP(print)"
    puts stderr "$HELP(json)"
    puts stderr "$HELP(dump)"
    puts stderr "$HELP(sleep)"
    puts stderr "$HELP(verbose)"
    puts stderr "$HELP(debug)"
    puts stderr "$HELP(help)"
    puts stderr ""

    exit 1

  }

}




proc print_sem {} {

  global sem
  global data_per_hour
  global data_per_day
  global data_per_month

  set out ""
  append out [ print_device ]
  append out [ print_settings ]
  append out [ print_schedulers ]
  append out [ print_countdown ]
  append out [ print_randommode ]
  append out [ print_measurement ]
  append out [ print_statistics ]
  append out $sem(header_data)
  append out [ print_data [ array get data_per_hour ] ]
  append out [ print_data [ array get data_per_day ] ]
  append out [ print_data [ array get data_per_month ] ]
  puts -nonewline $out

}




proc print_device {} {

  global INIT
  global sem

  set out ""

  if { ( $sem(init) & $INIT(device) ) == $INIT(device) } {

    append out "Device:\n"
    append out "  Mac:                  $sem(mac)\n"
    append out "  Device PIN:           $sem(pin)\n"
    append out "  Name:                 $sem(name)\n"
    append out "  Vendor:               $sem(vendor)\n"
    append out "  Serial:               $sem(serial)\n"
    append out "  Firmware:             $sem(firmware)\n"
    append out "  Hardware:             $sem(hardware)\n"
    append out "  MTU:                  $sem(mtu)\n"
    append out "  Alias:                $sem(alias)\n"
    append out "\n"

  }

  return $out

}




proc calc_power_factor { power voltage ampere watt } {

  if { $power == 1 && $voltage > 0 && $ampere > 0 } {

    return [ format_decimal [ expr $watt / $voltage / $ampere ] ]

  } else {

    return 1

  }

}




proc print_measurement {} {

  global INIT
  global sem

  if { ( $sem(init) & $INIT(measurement) ) != $INIT(measurement) } {
    return ""
  }

  append out "Status:\n"
  append out "  Power:                [ expr $sem(power) == 1 ? "on" : "off" ]\n"
  append out "  Voltage:              $sem(voltage) VAC\n"
  append out "  Ampere:               $sem(ampere) A\n"
  append out "  Watts:                $sem(watt) W\n"
  append out "  Frequency:            $sem(frequency) Hz\n"
  append out "  Power factor:         $sem(power_factor)\n"
#  append out "  Total consumption:    $sem(total) kWh\n"

  if { $sem(total_day) != -1} {
    append out "  Total last 24h:       [expr $sem(total_day) / 1000.0 ] kWh\n"
  }
  if { $sem(total_month) != -1} {
    append out "  Total last 31 days:   [expr $sem(total_month) / 1000.0 ] kWh\n"
  }
  if { $sem(total_year) != -1} {
    append out "  Total last 12 months: [expr $sem(total_year) / 1000.0 ] kWh\n"
  }

  append out "\n"

  return $out

}




proc print_data { _data } {

  array set data $_data
  set out ""

  foreach d [ lsort [ array names data ] ] {

    append out "$d\t$data($d)\n"

  }

  return $out

}




proc print_statistics {} {

  global INIT
  global sem

  if { ( $sem(init) & $INIT(statistics) ) != $INIT(statistics) } {
    return ""
  }

  append out "Statistics:\n"
  append out "  Log statistics since:  $sem(statistics_start)\n"
  append out "  Runtime:               [seconds_to_time_w_days $sem(statistics_runtime)]\n"
  append out "  Current consumption:   [expr $sem(total_year) / 1000.0 ] kWh\n"
  append out "  Avg. consumption:      $sem(avg_consumption) Wh\n"
  append out "  Projected consumption: [expr $sem(projected_consumption) / 1000.0 ] kWh per year\n"
  append out "  Projected price:       $sem(projected_price) $ per year\n\n"
}




proc print_measurement_as_csv {} {

  global sem

  append out "[ current_datetime_str ]\t"
  append out "$sem(power)\t$sem(voltage)\t$sem(ampere)\t"
  append out "$sem(watt)\t$sem(frequency)\t$sem(power_factor)"

  return $out

}




proc print_settings {} {

  global INIT
  global sem

  set out ""

  if { ( $sem(init) & $INIT(settings) ) == $INIT(settings) } {

    append out "Settings:\n"
    append out "  LED ring:             [ expr $sem(led) == 1 ? "on" : "off" ]\n"
    append out "  Overload limit:       $sem(over_power) W\n"
    append out "\n"
    append out "  Price:                [ format_decimal [ expr $sem(normal_price) / 100.0 ] ] $ per kWh\n"
    append out "\n"
    append out "  Reduced mode:         [ expr $sem(reduced_mode) == 1 ? "on" : "off" ]\n"

    if { $sem(reduced_mode) == 1 } {

      append out "  Reduced price:        [ format_decimal [ expr $sem(reduced_price) / 100.0 ] ]\n"
      append out "  Reduced start:        [ minutes_to_time $sem(reduced_start) ]\n"
      append out "  Reduced end:          [ minutes_to_time $sem(reduced_end) ]\n"
    }
    append out "\n"

  }

  return $out

}




proc print_countdown {} {

  global sem

  set out ""

  if { $sem(countdown) > 0 } {

    set runtime [ clock format [ expr $sem(countdown_schedule) - $sem(countdown_origin) ] -format "%H:%M:%S" -timezone :GMT ]
    set runtime "[ expr ( $sem(countdown_schedule) - $sem(countdown_origin) ) / 86400 ] days, $runtime"

    set remain [ clock format [ expr $sem(countdown_schedule) - [ clock seconds ] + [ time_offset ] ] -format "%H:%M:%S" -timezone :GMT ]
    set remain "[ expr ( $sem(countdown_schedule) - [ clock seconds ] + [ time_offset ] ) / 86400 ] days, $remain"

    append out "Countdown:               on\n"
    append out "  Action:                [ expr $sem(countdown) == 1 ? "on" : "off" ]\n"
    append out "  Started at:            [ datetime_str $sem(countdown_origin) ]\n"
    append out "  ETA:                   [ datetime_str $sem(countdown_schedule) ]\n"
    append out "  Runtime:               $runtime\n"
    append out "  Remaining:             $remain\n"

    append out "\n"

  } elseif { $sem(countdown) == 0 } {

     append out "Countdown:              off\n"

  }

  return $out

}




proc print_schedulers {} {

  global sem

  set out ""

  if {$sem(schedulers) >= 0 } {

    append out "Schedulers:             $sem(schedulers)\n\n"

  }

  for { set i 0 } { $i < $sem(schedulers) } { incr i } {

    append out "Scheduler [ expr $i + 1 ]:\n"
    append out "  Slot:              $sem("scheduler_slot_$i")\n"
    append out "  Active:            [ expr $sem("scheduler_active_$i") == 1 ? "yes" : "no" ]\n"
    append out "  Action:            turn [ expr $sem("scheduler_action_$i") == 1 ? "on" : "off" ]\n"
    append out "  Date:              $sem("scheduler_date_$i")\n"
    append out "  Time:              $sem("scheduler_time_$i")\n"
    append out "  Weekdays:          $sem("scheduler_daymask_$i")\n"
    append out "\n"

  }

  return $out

}




