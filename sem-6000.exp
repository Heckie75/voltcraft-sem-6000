  } else {

    lappend bytes 0
    lappend bytes 0
    lappend bytes 0
    lappend bytes 0
    lappend bytes 0
    lappend bytes 0

  }

  lappend bytes 0
  lappend bytes 0

  set response [ command_req $bytes ]

  if { [ llength $response ] == 3 \
      && [ lindex $response 0 ] == 21 \
      && [ lindex $response 1 ] == 0 } {

    set sem(randommode)         $status
    set sem(randommode_daymask) $daymask
    set sem(randommode_start)   $start
